extends layout

block content
  header
    h2=title
  section
    nav
      ul
        li
          a.active(href='quoteHist') Quote History
        li
          a(href='clientInfo') Client Information
        li
          a(href='reqQuote') Request a Quote
        li
          a(href="/") Home
    table
      tbody
        tr
          th Item #
          th Request Date
          th Delivery Date
          th Gallons
          th Rate
          th Total Price
        each quote in quote_list
          tr
            td #{quote.id}
            td #{quote.requestDate}
            td #{quote.deliveryDate}
            td #{quote.gallonsRequested}
            td #{quote.rate}
            td #{quote.totalAmountDue}
        else
          tr
            td No quotes.
            td No quotes.
            td No quotes.
            td No quotes.
            td No quotes.
            td No quotes.
  footer
    p Fuel Prediction
